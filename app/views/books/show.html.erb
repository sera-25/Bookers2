<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @bookz.user %>
      <%= render 'book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
        <tr>
          <td><%= image_tag @bookz.user.get_profile_image %><br><%= link_to @bookz.user.name, user_path(@bookz) %></td>
          <td><%= link_to @bookz.title, book_path(@bookz) %></td>
          <td><%= @bookz.body %></td>
          <% if @bookz.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@bookz) %></td>
          <td><%= link_to "Destroy", book_path(@bookz), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
